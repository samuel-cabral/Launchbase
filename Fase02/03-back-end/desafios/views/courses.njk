{% extends "layout.njk" %}

{% block title %}
  <title>Rocketseat | Cursos</title>
{% endblock title %}

{% block content %}
  <div id="wrapper">
    <h1>Cursos</h1>
  </div>


  <section class="cards">
    {% for item in items %}
      <div class="card" id="{{item.id}}">
        <div class="card__image-container">
          <img src="{{item.image}}" alt="Imagem de {{item.title}}"/>
        </div>
        <div class="card__content">
          <p>{{item.content}}</p>
        </div>
        <div class="card__info">
          <p class="card__price">{{item.price}}</p>
        </div>
      </div>
    {% endfor %}
  </section>

  <div class="modal-overlay">
    <div class="modal">
      <nav class="navbar">
        <a class="maximize-modal">
          <span class="material-icons">
            aspect_ratio
          </span>
        </a>
        <a class="close-modal">
          <i class="material-icons">close</i>
        </a>
      </nav>

      <div class="modal-content">
        <iframe class="responsive-iframe" src="" frameborder="0"></iframe>
      </div>
    </div>
  </div>

  <script src="scripts.js"></script>
{% endblock content %}