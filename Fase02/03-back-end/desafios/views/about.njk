{% extends "layout.njk" %}

{% block title %}
  <title>{{ about.name }} | {{ about.title }}</title> 
{% endblock title %}

{% block content %}
  <div id="wrapper">
    <h1>{{ about.title }}</h1>
    <img src="{{ about.logo_url }}" alt="Imagem de {{ about.name }}"/>

    <h1>
      {{ about.avatar_url }}
    </h1>
    <h2>
      {{ about.presentation }}
    </h2>
    <p>
      {{ about.description }}
    </p>
  </div>

  <section class="technologies">
    <h1>Nossa Stack</h1>
      <ul class="technologies-list">
        {% for tech in techs %}
            <li class="technologies-list-item">
              <img 
                src="{{ tech.logo }}" 
                alt="Imagem de {{ tech.title }}"
              >
              <h1>{{ tech.title }}</h1>
            </li>
        {% endfor %}
    </ul>
  </section>

{% endblock content %}

{% block footer %}
  <div id="links-footer" class="links">
    {% for link in links %}
      <a href="{{ link.url }}" target="_blank">{{ link.name }}</a>
    {% endfor %}
  </div>
{% endblock footer %}
